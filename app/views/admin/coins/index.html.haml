%h1= t Coin.model_name.human(count: 2)
%table.table.table-hover
  %thead
    %tr
      %th= Coin.human_attribute_name(:name)
      %th= Coin.human_attribute_name(:code)
      %th= Coin.human_attribute_name(:kind)
      %th= t 'status.status'
      %th= t 'actions.actions'

  %tbody
    - @coins.order(:name).each do |coin|
      %tr
        %td= coin.name
        %td= coin.code
        %td= coin.kind
        %td= status_mark coin.status
        %td= render 'admin/shared/index_buttons', resource: coin
%br
.row
  .col-md-2
    = link_to t('actions.create'), new_admin_coin_path, class: 'btn btn-primary btn-sm'
