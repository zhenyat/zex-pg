.container
  .row
    .col-ms-6
      = simple_form_for([:admin, @coin], html: {multipart: true}) do |f|
        = f.error_notification message: t('messages.error_notification')

        .form-inputs
          = render 'admin/shared/form_ancestry', f: f, object: @coin
          = f.input :name
          = f.input :code
          = f.input :kind, include_blank: false

          = f.input :status, default: 0
          /= render 'admin/shared/status_buttons', f: f

          = render 'admin/shared/form_rich_text_content', f: f, object: @coin
          = render 'admin/shared/form_images', f: f, object: @coin
          = render 'admin/shared/form_actions', f: f, object: @coin
