%h1= t CoinNickname.model_name.human(count: 2)
%table.table.table-hover
  %thead
    %tr
      %th= CoinNickname.human_attribute_name(:coin)
      %th= CoinNickname.human_attribute_name(:name)
      -# %th= t 'status.status'
      %th= t 'actions.actions'

  %tbody
    - @coin_nicknames.by_coin_name.each do |coin_nickname|
      %tr
        %td= coin_nickname.coin.name
        %td= coin_nickname.name
        %td= render 'admin/shared/index_buttons', resource: coin_nickname
%br
.row
  .col-md-2
    = link_to t('actions.create'), new_admin_coin_nickname_path, class: 'btn btn-primary btn-sm'
