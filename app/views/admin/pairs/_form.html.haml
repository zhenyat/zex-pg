.container
  .row
    .col-ms-6
      = simple_form_for([:admin, @pair], html: {multipart: true}) do |f|
        = f.error_notification message: t('messages.error_notification')

        .form-inputs
          = render 'admin/shared/form_ancestry', f: f, object: @pair
          = f.association :base, prompt: "Choose Base currency"
          = f.association :quote, prompt: "Choose Qoute currency"
          /= f.input :name
          /= f.input :code
          = f.input :level, include_blank: false
          = f.input :decimal_places
          = f.input :min_price
          = f.input :max_price
          = f.input :min_amount
          = f.input :hidden
          = f.input :fee

          = f.input :status, default: 0
          /= render 'admin/shared/status_buttons', f: f

          = render 'admin/shared/form_rich_text_content', f: f, object: @pair
          = render 'admin/shared/form_images', f: f, object: @pair
          = render 'admin/shared/form_actions', f: f, object: @pair
