%h1= t Pair.model_name.human(count: 2)
%table.table.table-hover
  %thead
    %tr
      %th= Pair.human_attribute_name(:base)
      %th= Pair.human_attribute_name(:quote)
      %th= Pair.human_attribute_name(:name)
      %th= Pair.human_attribute_name(:code)
      %th= Pair.human_attribute_name(:level)
      %th= Pair.human_attribute_name(:decimal_places)
      %th= Pair.human_attribute_name(:min_price)
      %th= Pair.human_attribute_name(:max_price)
      %th= Pair.human_attribute_name(:min_amount)
      %th= Pair.human_attribute_name(:hidden)
      %th= Pair.human_attribute_name(:fee)
      %th= t 'status.status'
      %th= t 'actions.actions'

  %tbody
    - @pairs.each do |pair|
      %tr
        %td= pair.base.name
        %td= pair.quote.name
        %td= pair.name
        %td= pair.code
        %td= pair.level
        %td= pair.decimal_places
        %td= pair.min_price
        %td= pair.max_price
        %td= pair.min_amount
        %td= pair.hidden
        %td= pair.fee
        %td= status_mark pair.status
        %td= render 'admin/shared/index_buttons', resource: pair
%br
.row
  .col-md-2
    = link_to t('actions.create'), new_admin_pair_path, class: 'btn btn-primary btn-sm'
