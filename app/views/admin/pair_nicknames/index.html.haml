%h1= t PairNickname.model_name.human(count: 2)
%table.table.table-hover
  %thead
    %tr
      %th= PairNickname.human_attribute_name(:pair)
      %th= PairNickname.human_attribute_name(:name)
      %th= t 'actions.actions'

  %tbody
    - @pair_nicknames.each do |pair_nickname|
      %tr
        %td= pair_nickname.pair.code
        %td= pair_nickname.name
        %td= render 'admin/shared/index_buttons', resource: pair_nickname
%br
.row
  .col-md-2
    = link_to t('actions.create'), new_admin_pair_nickname_path, class: 'btn btn-primary btn-sm'
