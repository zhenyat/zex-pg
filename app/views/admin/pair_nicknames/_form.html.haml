.container
  .row
    .col-ms-6
      = simple_form_for([:admin, @pair_nickname], html: {multipart: true}) do |f|
        = f.error_notification message: t('messages.error_notification')

        .form-inputs
          = render 'admin/shared/form_ancestry', f: f, object: @pair_nickname
          = f.association :pair, collection: Pair.order('name ASC'), include_blank: false
          = f.input :name

          = render 'admin/shared/form_rich_text_content', f: f, object: @pair_nickname
          = render 'admin/shared/form_images', f: f, object: @pair_nickname
          = render 'admin/shared/form_actions', f: f, object: @pair_nickname
